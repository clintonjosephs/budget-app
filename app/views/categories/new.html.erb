<section class="section-wrapper">
    <div class="section-heading">
        <span class="fs-4">
            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
            New category
        </span>
    </div>
    <div class="section-content container">
            <%= form_with model: @category, url: categories_path, class: 'row', :html => { :multipart => true } do |f| %>
                    <div class="form-group text-center mb-4 mt-5" id="img_container">
                        <%= image_tag("no-category.jpg", :size => '100x100', style: "border-radius: 50%; margin-bottom: 1rem; border: solid 1px;", id: 'img_prev') %>
                        <br />
                        <span class="text-muted">Choose an image (if any)</span>
                    </div>
                    <div class="form-group pb-2">
                        <%= f.label :name, "Category Name", class: "text-muted" %>
                        <%= f.text_field :name, :class => "form-control", placeholder: 'Type here ..' %>
                    </div>
                    <div class="form-group">
                        <%= f.submit "Create", :class => "btn submit-btn form-control" %>
                    </div>
                    <%= f.file_field :image, id: 'image_picker', onchange: "readURL(this);", style: 'visibility:hidden;' %>
            <% end %>
    </div>
</section>
<%= javascript_include_tag 'form_image' %>