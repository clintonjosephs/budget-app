<section class="watch-board">
    <div class="category-watch">
        <div class="category-details">
            <%= image_tag(@category.image, size: '50x50', style: 'border-radius: 10px') if @category.image.present? %>
            <%= image_tag("no-category.jpg", size: '50x50', style: 'border-radius: 10px') if !@category.image.present? %>
            <span style="margin-left:0.5rem;"><%= @category.name %></span> 
        </div>
        <span class="m-1" style="float:right; font-weight: bold;">
        <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
        <%= number_to_currency(@category.total_amount) %></span>
    </div>
</section>
<section class="list-wrapper">
    <ul>
        <% @expenses.each do |expense| %>
                <li class="shadow">
                    <a href="<%= expense_path(expense.id) %>" data-confirm="Are you sure you want to delete <%= expense.name %>?" data-method="delete" class='delete-item'>
                        <i class="fa fa-trash trash shadow" aria-hidden="true"></i>
                    </a>
                    <div class="expense">
                        <%= expense.name %><br />
                        <span class="text-muted fs-6"><%= expense.date_of_expense.strftime("%B %d, %Y") %> </span>
                        <span style="float:right; font-weight: bold;">
                            <%= number_to_currency(expense.amount) %>
                        </span>
                    </div>
                </li>
        <% end %>
   </ul>
</section>
<%= link_to new_expense_path, class: 'foot-button' do %>
    <div class="btn-build">
        Record Expense
    </div>
<% end %>
