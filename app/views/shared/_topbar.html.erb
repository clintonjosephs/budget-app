<section class="container-fluid usermgt mb-3">
<div class="row">
  <div class="col-2">
  <button type="button" class="flat-btn" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop">
   <i class="fa fa-bars" aria-hidden="true"></i>
 </button>
  </div>
  <div class="col-7 mt-1">
    <h5><%= page_name %></h5>
  </div>
  <div class="col-3 mt-1">
  <i class="fa fa-search fs-3" aria-hidden="true"></i>
  </div>
</div>
</section>

<div class="offcanvas offcanvas-start side-bar" data-bs-backdrop="false" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="staticBackdropLabel">Bugeta</h5>
    <i class="fa fa-times fs-2" data-bs-dismiss="offcanvas" aria-hidden="true"></i>
  </div>
  <div class="offcanvas-body">
    <% if current_user %>
      <div class="text-center">
          <%= image_tag("app-logo.png", :size => '120x120', style: "border-radius: 50%;")  if !current_user.image.present? %>
          <%= image_tag(current_user.image, :size => '120x120', style: "border-radius: 50%;")  if current_user.image.present? %>
          <p class="fs-3 mt-2"> <%= current_user.name %> </p>
      </div>
      <ul class="mt-5">
        <li>
            <i class="fa fa-home" aria-hidden="true"></i>
            <span>Home</span>
        </li>
        <li>
          <i class="fa fa-plus" aria-hidden="true"></i>
          <span>Add a new category</span>
        </li>
        <li>
          <i class="fa fa-pencil" aria-hidden="true"></i>
          <span>Edit Profile</span>
        </li>
        <li>
          <i class="fa fa-star" aria-hidden="true"></i>
          <span>Rate this app</span>
        </li>
        <li>
          <i class="fa fa-sign-out" aria-hidden="true"></i>
          <span>Sign out</span>
        </li>
      </ul>
    <% end %>
  </div>
</div>