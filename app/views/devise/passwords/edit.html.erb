<%= render partial: 'devise/shared/devise_top_nav', locals: { page_name: 'Create a new password', path_to_text: '', path_to: '', path_back: user_session_path } %>
<section class="container devise-forms">
  <div class="col-md-6 offset-md-3 col-sm-12">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn submit-btn' %>
  </div>
<% end %>
</div>
</section>
